@model  WebApplicationTestCore.Models.GuessResponse
@{
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <meta name="viewport" />
    <link href="~/css/Styles.css" rel="stylesheet"/>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <p>
        <a href="../Home">Main</a>
    </p>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Вечеринка</h4></div>
        <div class="panel-body">
            <form class='p-a-1'asp-action="RsvpForm" method="post">
                <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input class="form-control" asp-for="Name" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input class="form-control" asp-for="Email" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone">Phone</label>
                        <input class="form-control" asp-for="Phone" />
                    </div>

                    <div class="form-group">
                            <label> Пойдёшь на вечеринку </label>
                            <select class="form-control" asp-for="WillAttend">
                                <option value="">Выбирай</option>
                                <option value="true">Пойду</option>
                                <option value="false">Нет</option>
                            </select>
                            <div class="text-center">
                                <button class="btn btn-primary" type="submit">
                                Отправить
                                </button>
                            </div>
                    </div>
            </form>
        </div>
        </div>
</body>
</html>
